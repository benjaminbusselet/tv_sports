/* Minimal theme CSS avec structure corrigée */

/* ===============================
   MEDIA QUERIES - TABLETTE (768px - 1023px)
   =============================== */
@media (min-width: 768px) and (max-width: 1023px) {
  /* Ajustement des conteneurs principaux */
  .header,
  .events-container,
  .tabs-container {
    width: 95%;
    margin-left: auto;
    margin-right: auto;
  }

  /* Ajustement des grilles */
  .events-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  /* Ajustement des espacements */
  .header {
    padding: 0.5rem 0.75rem;
    margin: 0.5rem auto;
  }

  .event-card {
    padding: 0.75rem;
    margin: 0.25rem;
  }

  /* Ajustement des cartes d'événements */
  .event-teams {
    flex-direction: column;
    gap: 0.5rem;
  }

  .event-team {
    flex-direction: row;
    justify-content: flex-start;
    gap: 0.75rem;
  }

  .event-time {
    margin: 0.5rem 0;
  }

  /* Navigation entre les jours */
  .days-navigation {
    gap: 0.5rem;
  }

  .day-tab {
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
  }

  /* Tabs de sport */
  .tabs {
    gap: 0.5rem;
    padding: 0.5rem;
  }

  .tab {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
  }
}


/* ===============================
   VARIABLES GLOBALES CENTRALISÉES
   =============================== */

:root {
  /* Background theme */
  --bg-light: #e6f2ff;
  --bg-dark: #1e3a8a;
  --bg-color: var(--bg-light);
  --text-from-bg: var(--bg-dark);

  /* Core design tokens */
  --radius-corner: 16px;
  --shadow-soft: 0 4px 24px -8px rgba(30, 58, 138, 0.1);
  --backdrop-blur: blur(12px);

  /* iOS26 UI palette */
  --ui-bg-light: #bbffcc;
  --ui-text-light: #192655;
  --ui-border-light: #82ffd3;
  --ui-bg-light: #95d9b8;
  --ui-bg-dark: #0c1632;
  --ui-text-dark: #bbffcc;
  --ui-border-dark: #2360c0;
  --ui-bg: var(--ui-bg-light);
  --ui-text: var(--ui-text-light);
  --ui-border: var(--ui-border-light);

  /* Surface aliases */
  --surface-radius: var(--radius-corner);
  --surface-shadow: var(--shadow-soft);
  --surface-blur: var(--backdrop-blur);
  --surface-opacity: 0.95;

  /* Header/tabs variables */
  --header-bg: rgba(230, 242, 255, 0.6);
  --header-border: rgba(16, 24, 40, 0.06);
  --header-shadow: 0 8px 24px rgba(16, 24, 40, 0.06);
  --focus-ring: rgba(30, 58, 138, 0.12);

  /* UI system variables */
  --ui-radius: 16px;
  --ui-backdrop: blur(8px);
  --ui-opacity: 0.95;
  --ui-shadow: 0 4px 24px -8px rgba(30, 58, 138, 0.08);
  --ui-shadow-strong: 0 8px 32px -8px rgba(30, 58, 138, 0.16);

  /* TYPOGRAPHIE iOS26 */
  --font-system: system-ui, -apple-system, 'Inter', 'Roboto', 'Segoe UI',
    sans-serif;
  --text-xs: 0.75rem;
  --text-sm: 0.875rem;
  --text-base: 1rem;
  --text-lg: 1.125rem;
  --text-xl: 1.25rem;
  --text-2xl: 1.5rem;
  --font-light: 300;
  --font-normal: 400;
  --font-medium: 500;
  --font-semibold: 600;
  --font-bold: 700;

  /* Legacy variables conservées */
  --color-border-light: rgba(30, 58, 138, 0.3);
  --color-background-light-opacity: 0.9;

  body.dark {
    /* Theme overrides */
    --bg-color: var(--bg-dark);
    --text-from-bg: var(--bg-light);
    --ui-bg: var(--ui-bg-dark);
    --ui-text: var(--ui-text-dark);
    --ui-border: var(--ui-border-dark);

    /* Header dark mode variables */
    --header-bg: rgba(30, 58, 138, 0.42);
    --header-border: rgba(255, 255, 255, 0.06);
    --header-shadow: 0 8px 24px rgba(0, 0, 0, 0.18);
    --focus-ring: rgba(230, 242, 255, 0.12);
  }
}

/* ===============================
   BASE STYLES
   =============================== */

html,
body,
#root {
  margin: 0;
  padding: 0;
  height: 100%;
}

body,
#root {
  background-color: var(--bg-color);
  min-height: 100vh;
  color: var(--text-from-bg);
  font-family: var(--font-system);
  font-size: var(--text-base);
}

/* ===============================
   UTILITAIRES SURFACE (LIQUID GLASS)
   =============================== */

.surface-bar {
  border-radius: var(--surface-radius);
  background: color-mix(in oklab, var(--ui-bg) 12%, transparent);
  border: 1.5px solid color-mix(in oklab, var(--ui-border) 60%, #ffffff 20%);
  box-shadow: 0 8px 32px -8px rgba(30, 58, 138, 0.16),
    0 2px 8px rgba(16, 24, 40, 0.04);
  backdrop-filter: var(--surface-blur);
  -webkit-backdrop-filter: var(--surface-blur);
}

.surface-chip {
  position: relative;
  border-radius: var(--surface-radius);
  background-color: var(--ui-bg);
  color: var(--ui-text);
  border: 2px solid var(--ui-border);
  box-shadow: 0 8px 32px -8px rgba(30, 58, 138, 0.16),
    0 2px 8px rgba(16, 24, 40, 0.04),
    0 0 12px 3px color-mix(in oklab, var(--ui-bg) 40%, transparent);
}

.surface-chip::before {
  content: '';
  position: absolute;
  inset: 0 0 55% 0;
  border-top-left-radius: inherit;
  border-top-right-radius: inherit;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.28),
    rgba(255, 255, 255, 0.06)
  );
  pointer-events: none;
  mix-blend-mode: overlay;
}

body.dark .surface-chip {
  background-color: var(--ui-bg);
  color: var(--ui-text);
  border: 2px solid var(--ui-border);
  box-shadow: 0 8px 32px -8px rgba(30, 58, 138, 0.16),
    0 2px 8px rgba(0, 0, 0, 0.2),
    0 0 12px 3px color-mix(in oklab, var(--ui-border) 45%, transparent);
}

/* ===============================
   HEADER STYLES
   =============================== */

.header {
  display: grid;
  grid-template-columns: auto 1fr auto;
  align-items: center;
  gap: 1rem;
  padding: 0.65rem 0.9rem;
  margin: 0.75rem 1rem;
  border-radius: 16px;
  background: var(--header-bg);
  border: 1px solid var(--header-border);
  box-shadow: var(--header-shadow), 0 0 24px 8px #bbffcc33;
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  opacity: 0.93;
  transition: background-color 220ms ease, box-shadow 220ms ease,
    border-color 220ms ease;
  position: relative;
  white-space: nowrap;
}

.header > h1 {
  grid-column: 1 / 2;
}
.header > .days-navigation {
  grid-column: 2 / 3;
}
.header > .header-actions {
  grid-column: 3 / 4;
}

.header h1 {
  margin: 0;
  font-size: var(--text-2xl);
  font-weight: var(--font-semibold);
  line-height: 1;
  color: inherit;
  flex: 0 0 auto;
  text-align: left;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex: 0 0 auto;
}

.header .days-navigation {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  justify-self: center;
  min-width: 0;
  max-width: 60%;
  flex-wrap: nowrap;
}

.header .days-chips {
  display: flex;
  gap: 0.5rem;
  flex-wrap: nowrap;
  align-items: center;
}

.header .days-navigation > * {
  display: inline-flex;
  align-items: center;
}

/* Styles des puces jours */
.header .days-chips .chip {
  position: relative;
  padding: 0.35rem 0.6rem;
  font-size: var(--text-sm);
  cursor: pointer;
  transition: background 160ms ease, transform 120ms ease,
    border-color 160ms ease, box-shadow 160ms ease;
  border-radius: 18px;
  opacity: 0.95;
  /* Background ~95% solidity with subtle glass gradient */
  background: linear-gradient(
    135deg,
    color-mix(in oklab, var(--ui-bg-light) 95%, transparent),
    color-mix(in oklab, var(--ui-bg-light) 100%, white 5%)
  );
  filter: saturate(1.2);
  color: var(--ui-text-light);
  font-weight: var(--font-medium);
  border: 0.5px solid rgba(30, 58, 138, 0.15);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.3),
    0 8px 32px -8px rgba(30, 58, 138, 0.16), 0 2px 8px rgba(16, 24, 40, 0.04),
    0 0 24px 8px color-mix(in oklab, var(--ui-bg-light) 50%, transparent);
  background-blend-mode: overlay;
}

.header .days-chips .chip:hover,
.header .days-chips .chip:focus {
  filter: saturate(1.25) brightness(1.05);
  transform: translateY(-2px) scale(1.03);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.3),
    0 20px 60px -20px rgba(30, 58, 138, 0.28), 0 8px 28px rgba(16, 24, 40, 0.12),
    0 0 40px 16px color-mix(in oklab, var(--ui-bg-light) 50%, transparent);
}

.header .days-chips .chip:focus-visible {
  outline: none;
  box-shadow: 0 0 0 4px var(--focus-ring);
}

.header .days-chips .chip::before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 50%;
  border-top-left-radius: inherit;
  border-top-right-radius: inherit;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.32),
    rgba(255, 255, 255, 0.08)
  );
  pointer-events: none;
  mix-blend-mode: overlay;
}

body.dark .header .days-chips .chip {
  background: linear-gradient(
    135deg,
    color-mix(in oklab, var(--ui-bg-dark) 95%, transparent),
    color-mix(in oklab, var(--ui-bg-dark) 100%, #000 5%)
  );
  filter: saturate(1.2);
  color: var(--ui-text-dark);
  border: 0.5px solid rgba(30, 58, 138, 0.15);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.12),
    0 8px 32px -8px rgba(30, 58, 138, 0.16), 0 2px 8px rgba(0, 0, 0, 0.2),
    0 0 24px 8px color-mix(in oklab, var(--ui-bg-dark) 50%, transparent);
}


/* ===============================
   TABS (SPORTS) STYLES
   =============================== */

.tabs {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.65rem 0.9rem;
  margin: 0.75rem 1rem;
  border-radius: 16px;
  background: var(--header-bg);
  border: 1px solid var(--header-border);
  box-shadow: var(--header-shadow), 0 0 24px 8px #bbffcc33;
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  opacity: 0.93;
}

.tabs .tab {
  padding: 0.35rem 0.6rem;
  font-size: var(--text-sm);
  cursor: pointer;
  transition: background 160ms ease, transform 120ms ease,
    border-color 160ms ease, box-shadow 160ms ease;
  border-radius: 18px;
  opacity: 0.95;
  background: linear-gradient(
    135deg,
    color-mix(in oklab, var(--ui-bg-light) 95%, transparent),
    color-mix(in oklab, var(--ui-bg-light) 100%, white 5%)
  );
  filter: saturate(1.2);
  color: var(--ui-text-light);
  font-weight: var(--font-medium);
  border: 0.5px solid rgba(30, 58, 138, 0.15);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.3),
    0 8px 32px -8px rgba(30, 58, 138, 0.16), 0 2px 8px rgba(16, 24, 40, 0.04),
    0 0 24px 8px color-mix(in oklab, var(--ui-bg-light) 50%, transparent);
  position: relative;
}

.tabs .tab:hover,
.tabs .tab:focus {
  filter: saturate(1.25) brightness(1.1);
  transform: translateY(-2px) scale(1.04);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.3),
    0 24px 72px -24px rgba(30, 58, 138, 0.32),
    0 10px 30px rgba(16, 24, 40, 0.12),
    0 0 48px 20px color-mix(in oklab, var(--ui-bg-light) 60%, transparent);
}

body.dark .tabs .tab {
  background: linear-gradient(
    135deg,
    color-mix(in oklab, var(--ui-bg-dark) 95%, transparent),
    color-mix(in oklab, var(--ui-bg-dark) 100%, #000 5%)
  );
  filter: saturate(1.2);
  color: var(--ui-text-dark);
  border: 0.5px solid rgba(30, 58, 138, 0.15);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.12),
    0 8px 32px -8px rgba(30, 58, 138, 0.16), 0 2px 8px rgba(0, 0, 0, 0.2),
    0 0 24px 8px color-mix(in oklab, var(--ui-bg-dark) 50%, transparent);
}

/* intensify highlight for tabs pseudo */
.tabs .tab::before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 50%;
  border-top-left-radius: inherit;
  border-top-right-radius: inherit;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.32),
    rgba(255, 255, 255, 0.08)
  );
  pointer-events: none;
  mix-blend-mode: overlay;
}

/* ===============================
   CARDS (LIQUID GLASS, BUTTON-LIKE)
   =============================== */

/* Structure principale des cartes */
.card {
  display: grid;
  grid-template-columns: 4rem 1fr 12rem;
  align-items: center;
  gap: 0.5rem;
  width: 50%; /* cards width reduced per request */
  margin: 1rem auto;
  padding: 0.5rem 0.75rem;
  border-radius: 18px;
  opacity: 0.95;
  background: linear-gradient(
    135deg,
    color-mix(in oklab, var(--ui-bg) 95%, transparent),
    color-mix(in oklab, var(--ui-bg) 100%, white 5%)
  );
  color: var(--ui-text);
  border: 0.5px solid rgba(30, 58, 138, 0.15);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.28),
    0 8px 32px -8px rgba(30, 58, 138, 0.16), 0 2px 8px rgba(16, 24, 40, 0.04),
    0 0 20px 6px color-mix(in oklab, var(--ui-bg) 36%, transparent);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  transition: transform 180ms ease, box-shadow 180ms ease, filter 180ms ease;
  position: relative;
}

.card::before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 50%;
  border-top-left-radius: inherit;
  border-top-right-radius: inherit;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.32),
    rgba(255, 255, 255, 0.06)
  );
  pointer-events: none;
  mix-blend-mode: overlay;
}

/* Zones internes */
.card-time {
  grid-column: 1;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, 'Roboto Mono',
    'Courier New', monospace;
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  text-align: left;
}

.card-info {
  grid-column: 2;
  padding: 0 0.75rem;
  text-align: left;
  overflow: hidden;
  font-size: var(--text-base);
  font-weight: var(--font-medium);
}
.card-info .title {
  font-size: inherit;
  font-weight: inherit;
  color: var(--ui-text);
}

.card-broadcaster {
  grid-column: 3;
  font-size: var(--text-sm);
  font-style: italic;
  opacity: 0.8;
  font-weight: var(--font-normal);
  text-align: right;
  min-width: 0;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
  max-width: 100%;
}

/* Hover / focus : mêmes interactions que les boutons */
.card:hover,
.card:focus {
  filter: saturate(1.18) brightness(1.03);
  transform: translateY(-3px);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.32),
    0 24px 72px -24px rgba(30, 58, 138, 0.28),
    0 10px 30px rgba(16, 24, 40, 0.12),
    0 0 48px 20px color-mix(in oklab, var(--ui-bg) 60%, transparent);
}

body.dark .card {
  background: linear-gradient(
    135deg,
    color-mix(in oklab, var(--ui-bg-dark) 95%, transparent),
    color-mix(in oklab, var(--ui-bg-dark) 100%, #000 5%)
  );
  color: var(--ui-text-dark);
  border: 0.5px solid rgba(255, 255, 255, 0.06);
  box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.12),
    0 8px 32px -8px rgba(30, 58, 138, 0.16), 0 2px 8px rgba(0, 0, 0, 0.2),
    0 0 20px 6px color-mix(in oklab, var(--ui-bg-dark) 36%, transparent);
}

/* ===============================
   THEME SWITCHER
   =============================== */

.theme-switcher {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.35rem 0.6rem;
  min-width: 40px;
  height: 36px;
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.04);
  color: inherit;
  border: 1px solid transparent;
  cursor: pointer;
  transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
}

.theme-switcher:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(16, 24, 40, 0.08);
  background: rgba(255, 255, 255, 0.06);
}

.theme-switcher:focus {
  outline: none;
  box-shadow: 0 0 0 4px var(--focus-ring);
  border-color: rgba(0, 0, 0, 0.06);
}

.theme-switcher:focus-visible {
  box-shadow: 0 0 0 4px var(--focus-ring);
}

/* ===============================
   UTILITAIRES UI GÉNÉRIQUES
   =============================== */

[data-ui-surface] {
  background-color: var(--ui-bg-light);
  color: var(--ui-text-light);
  border: 2px solid var(--ui-border-light);
  border-radius: var(--ui-radius);
  backdrop-filter: var(--ui-backdrop);
  -webkit-backdrop-filter: var(--ui-backdrop);
  opacity: var(--ui-opacity);
  box-shadow: var(--ui-shadow);
  transition: background-color 160ms ease, box-shadow 160ms ease,
    transform 120ms ease, border-color 160ms ease;
}

body.dark [data-ui-surface] {
  background-color: var(--ui-bg-dark);
  color: var(--ui-text-dark);
  border: 2px solid var(--ui-border-dark);
}

[data-ui-surface]:hover {
  filter: saturate(1.03);
  box-shadow: 0 8px 28px -10px rgba(30, 58, 138, 0.12);
  transform: translateY(-2px);
}

[data-ui-surface]:focus-visible {
  outline: none;
  box-shadow: 0 0 0 6px var(--focus-ring);
}

[data-ui-surface].surface-sm {
  padding: 0.4rem 0.6rem;
}

/* ===============================
   RESPONSIVE DESIGN
   =============================== */


@media (max-width: 520px) {
  .header {
    padding: 0.5rem 0.75rem;
    margin: 0.5rem;
  }
  .header h1 {
    font-size: 1rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .theme-switcher {
    height: 32px;
    min-width: 36px;
    padding: 0.25rem 0.5rem;
  }
}

/* ===============================
   MEDIA QUERIES - MOBILE (< 768px)
   =============================== */

@media (max-width: 767px) {
  
  /* ==================
     1. HEADER COMPACT
     ================== */
  
  .header {
    padding: 6px 12px;
    min-height: 44px;
    margin: 0.5rem auto;
  }
  
  .header h1,
  .header .logo {
    font-size: 1.125rem;
    max-width: 100px;
  }
  
  /* ===========================
     2. NAVIGATION JOURS - SCROLL
     =========================== */
  
  .header .days-navigation {
    display: flex !important;
    overflow-x: auto !important;
    overflow-y: hidden;
    gap: 8px !important;
    padding: 6px 12px !important;
    scroll-snap-type: x proximity;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none !important;
    -ms-overflow-style: none !important;
    flex-wrap: nowrap !important;
  }

  .header .days-navigation::-webkit-scrollbar {
    display: none;
  }

  .header .days-chips {
    overflow-x: auto !important;
    scrollbar-width: none !important;
  }

  .header .days-chips .chip {
    flex: 0 0 auto !important;
    scroll-snap-align: start;
    white-space: nowrap !important;
    padding: 8px 14px !important;
    font-size: 13px !important;
  }
  
  /* =======================
     3. FILTRES SPORT - SCROLL
     ======================= */
  
  .tabs {
    display: flex;
    overflow-x: auto;
    overflow-y: hidden;
    gap: 8px;
    padding: 6px 12px;
    scroll-snap-type: x proximity;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  
  .tabs::-webkit-scrollbar {
    display: none;
  }
  
  .tab {
    flex: 0 0 auto;
    scroll-snap-align: start;
    white-space: nowrap;
    min-height: 44px;
    padding: 8px 14px;
    font-size: 13px;
  }
  
  /* =========================
     4. CONTENEUR ÉVÉNEMENTS
     ========================= */
  
  .events-container {
    padding: 0 12px;
    width: 100%;
  }
  
  .events-grid {
    grid-template-columns: 1fr;
    gap: 12px;
  }
  
  /* ====================
     5. CARTES ÉVÉNEMENTS
     ==================== */
  
  .event-card,
  article.card {
    width: 100%;
    padding: 12px;
    margin: 8px 0;
  }
  
  .card-time {
    font-size: 13px;
    line-height: 1.4;
  }
  
  .card-info {
    line-height: 1.4;
  }
  
  .card-broadcaster {
    font-size: 13px;
    line-height: 1.4;
  }
  
  /* ======================
     6. ESPACEMENTS GLOBAUX
     ====================== */
  
  .container,
  main {
    padding: 0 16px;
  }
  
  section {
    margin: 12px 0;
  }
  
  /* ===================
     7. TOUCH TARGETS
     =================== */
  
  button,
  a.button,
  .btn {
    min-height: 44px;
    min-width: 44px;
    padding: 10px 16px;
  }
  
}
