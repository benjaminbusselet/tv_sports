    console.log(`âœ… Merge completed (${merged.length} events)`);
    console.log(`ðŸ“ Wrote ${outFile} (${merged.length} events)`);

    // Gestion --keep Ã©ventuelle pour nettoyage dans pipeline externe
  })().catch((e) => {
    console.error(e.message || String(e));
    process.exit(1);
  });
